<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- MENU NAVIGATION -->
    <!-- Temas para a Toolbar, ver include_toolbar.xml -->
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18dp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">50dp</item><!-- item size in menu-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tema base + NoActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema base + NoActionBar -->
    <style name="AppTheme.NoActionBar.NavDrawer">

    </style>
    <!-- MENU NAVIGATION -->

</resources>
