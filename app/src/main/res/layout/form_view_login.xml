<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dimens_100"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimens_250"
                android:layout_height="@dimen/dimens_150"
                android:layout_marginTop="@dimen/dimens_25"
                android:src="@drawable/logo_ppi_pdi" />

            <LinearLayout
                android:background="@color/cinzaTopo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_25"
                android:orientation="vertical"
                android:padding="@dimen/dimens_25">

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:gravity="center"
                    android:hint="@string/prompt_Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:text="campo@htcom.com.br"
                    android:textColor="#000"
                    android:textColorHint="#000" />

                <EditText
                    android:id="@+id/edtPassw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:background="@android:drawable/edit_text"
                    android:gravity="center"
                    android:hint="@string/prompt_Passw"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:text="htcom2018"
                    android:textColor="#000"
                    android:textColorHint="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimens_15">

                    <Button
                        android:id="@+id/btn_entrar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/edtSenha"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/botao_padrao"
                        android:onClick="BtnEntrar"
                        android:text="@string/action_sign_in_register"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
